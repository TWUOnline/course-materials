/* Custom Callout Styles */

.course-activity {
    margin: 1em 0;
    border: 1px solid var(--primary-color);
    border-radius: .25rem;
}

.course-activity-header {
    margin-left: 0em;
    padding: 4px 1rem;
    background-color: var(--primary-color);
}

.course-activity-header p {
    color: white;
    font-size: 1em;
    margin-bottom: 0;
}

